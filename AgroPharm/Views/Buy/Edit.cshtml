@model AgroPharm.Models.ViewModel
@{
	double? oldQuantity = Model.tempQuantity;
}
<div class="page-content-wrapper">
	<div class="page-content">	
		<div class="row">
			<div class="col-md-12 col-sm-12">
				<div class="card">
					<div class="card-head">
						<header>Редактирование товара</header>						
					</div>
					<div class="card-body" id="bar-parent">
						<form id="editProductForm" asp-controller="Buy" asp-action="Edit" class="form-horizontal" method="post">
							<div class="form-body">
								<div class="form-group row">
									<label class="control-label col-md-3">
										Наименование товара <span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<select class="form-control input-height" asp-for="BuyProductRequest.ProductNameID" asp-items="Model.Products" required>
											<option value="Response.ProductName"></option>
										</select>
									</div>
								</div>								
								<div class="form-group row">
									<label class="control-label col-md-3">
										Наименовании организации <span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<select class="form-control input-height" asp-for="BuyProductRequest.OrganizationNameID" asp-items="Model.Organizations" required>
											<option value="Response."></option>
										</select>
									</div>
								</div>								
								<div class="form-group row">
									<label class="control-label col-md-3">
										Цена (TJS) 
										<span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<input type="number" id="priceTJS" asp-for="BuyProductRequest.BuyProductPrice" placeholder="Введите цену товара TJS" class="form-control input-height" step="0.01" min="0.01" required />
									</div>
								</div>
								<div class="form-group row">
									<label class="control-label col-md-3">
										Цена (USD) 
										<span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<input type="number" id="priceUSD" asp-for="BuyProductRequest.BuyProductPriceUSD" placeholder="Введите цену товара в USD" class="form-control input-height" step="0.01" min="0.01" required />
									</div>
								</div>
								<div class="form-group row">
									<label class="control-label col-md-3">
										Количество товара
										<span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<input type="number" id="quantity" asp-for="BuyProductRequest.BuyProductObem" placeholder="Введите количество" class="form-control input-height" min="1" required />
									</div>
								</div>
								<div class="form-group row">
									<label class="control-label col-md-3">
										Сумма (TJS)
										<span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<input type="number" id="sumTJS" asp-for="BuyProductRequest.BuyProductSumPrice" placeholder="Сумма TJS" class="form-control input-height" readonly />
									</div>
								</div>
								<div class="form-group row">
									<label class="control-label col-md-3">
										Сумма (USD)
										<span class="required"> * </span>
									</label>
									<div class="col-md-5">
										<input type="number" id="sumUSD" asp-for="BuyProductRequest.BuyProductSumPriceUSD" placeholder="Сумма USD" class="form-control input-height" readonly />
									</div>
								</div>
								<div class="form-group row">
									<label class="control-label col-md-3">
										Комментарий
									</label>
									<div class="col-md-5">
										<textarea asp-for="BuyProductRequest.BuyComment" placeholder="Коментарий к товару" class="form-control-textarea" rows="5"></textarea>
									</div>
								</div>								
								<input type="hidden" asp-for="tempQuantity">
								<input type="hidden" asp-for="BuyProductRequest.Id">	
								<input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
								<input type="hidden" name="_Currency" value="@Model.CurrencyNow" />
								<div class="form-actions">
									<div class="row">
										<div class="offset-md-3 col-md-9">
											<button asp-controller="Buy" asp-action="Edit" class="btn btn-primary">Сохранить изменения</button>
											<button type="button" class="btn btn-default" onclick="window.history.back();">Отмена</button>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="@Url.Content("~/js/editRecord.js")"></script>
<script src="@Url.Content("~/js/сalculatePrice.js")"></script>