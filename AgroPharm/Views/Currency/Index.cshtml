@model ViewModel
@{
    ViewData["Title"] = "Home Page";
}
@if (Model != null)
{
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="tabbable-line">
                        <div class="tab-content">
                            <div class="tab-pane active fontawesome-demo" id="tab1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card">
                                            <div class="card-head">
                                                <header>Курс валют</header>                                               
                                            </div>
                                            <div class="card-body ">
                                                <div class="row">
                                                    <div class="col-md-12 col-sm-6 col-6">
                                                        <div class="d-flex align-items-center justify-content-between">
                                                            <div class="btn-group">
                                                                <a asp-controller="Currency" asp-action="Edit" id="addRow" class="btn btn-info">
                                                                    Обновить курс <i class="fa fa-plus"></i>
                                                                </a>
                                                            </div>
                                                            <h4 class="text-center font-weight-bold mb-0">
                                                                Текущий курс валют 1 USD = @Model.CurrencyNow TJS
                                                            </h4>
                                                            <div class="btn-group">
                                                                <a class="btn deepPink-bgcolor btn-outline dropdown-toggle" data-toggle="dropdown">
                                                                    Инструменты
                                                                    <i class="fa fa-angle-down"></i>
                                                                </a>
                                                                <ul class="dropdown-menu dropdown-menu-right">
                                                                    <li>
                                                                        <a href="javascript:;">
                                                                            <i class="fa fa-print"></i> Print
                                                                        </a>
                                                                    </li>
                                                                    <li>
                                                                        <a href="javascript:;">
                                                                            <i class="fa fa-file-pdf-o"></i> Save as PDF
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="table-scrollable">
                                                    <table id="example4" class="table table-striped table-bordered table-hover table-checkable order-column valign-middle">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col" class="text-center">ID</th>
                                                                <th scope="col" class="text-center">Доллары к сомони</th>
                                                                <th scope="col" class="text-center">Дата изменения</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in Model.Currency)
                                                            {
                                                                <tr class="odd gradeX">
                                                                    <td class="text-center">@item.Id</td>
                                                                    <td class="text-center">@item.USDtoTJS</td>
                                                                    <td class="text-center">@item.DateChangeCurrency</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@* <script src="@Url.Content("~/js/getItems.js")"></script>*@

 